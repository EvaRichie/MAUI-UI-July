<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassFlyXaml.Resources.Styles.AppStyles">

    <Style x:Key="CourseHeaderText" TargetType="Label">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontFamily" Value="SFUIText-Medium"/>

    </Style>

    <Style x:Key="CourseSmallText" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontFamily" Value="SFUIText-Regular"/>
    </Style>

    
    
</ResourceDictionary>